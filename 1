    <button id="btn-play" onclick="playMusic()">Klik untuk Musik üéµ</button>

    <script>
        function playMusic() {
            var audio = document.getElementById("myAudio");
            var btn = document.getElementById("btn-play");
            if (audio.paused) {
                audio.play();
                btn.innerHTML = "Pause Musik ‚è∏Ô∏è";
            } else {
                audio.pause();
                btn.innerHTML = "Play Musik üéµ";
            }
        }
    </script>
